<UserControl x:Class="TimeCalculator.ViewerGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TimeCalculator"
             d:DesignWidth="400"
             d:DesignHeight="200"
             mc:Ignorable="d">
  <Grid HorizontalAlignment="Left">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Name="xTextBlock_Time"
               Style="{StaticResource Styles.Viewer.TextBlock}"
               Text="0"/>

    <ComboBox Name="xComboBox_TimeUnit"
              Grid.Row="1"
              Style="{StaticResource Styles.Viewer.ComboBox}">
      <ComboBoxItem>마이크로초</ComboBoxItem>
      <ComboBoxItem>밀리초</ComboBoxItem>
      <ComboBoxItem>초</ComboBoxItem>
      <ComboBoxItem>분</ComboBoxItem>
      <ComboBoxItem>시간</ComboBoxItem>
      <ComboBoxItem>일</ComboBoxItem>
      <ComboBoxItem>주</ComboBoxItem>
      <ComboBoxItem>년</ComboBoxItem>
    </ComboBox>
  </Grid>
</UserControl>
